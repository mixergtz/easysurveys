<h1>Listing surveys</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
      <% if survey.published? || current_user.author?(survey) %>
        <td><%= survey.title %></td>
        <td><%= survey.description %></td>
        <td><%= survey.state %></td>
        <td><%= link_to 'Show', survey %></td>
        <% if current_user.author?(survey) %>
          <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
          <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>
