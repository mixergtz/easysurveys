<fieldset>
  <%= f.label :description, "Question" %> <%= link_to "(remove)", '#', class: "remove_fields" %>
  <%= f.hidden_field :_destroy %><br />
  <%= f.text_area :description, :rows => 3, class: "form-control" %><br />
<%= f.fields_for :answers do |builder| %>
  <%= render 'answer_fields', :f => builder %>
<% end %>
<p class="text-right"><%= link_to_add_fields "<i class='fa fa-plus'> Add Answer</i>", f, :answers %></p>
<hr>
</fieldset>
